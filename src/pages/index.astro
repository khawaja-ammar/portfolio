---
import BaseLayout from "../layouts/BaseLayout.astro";
import SVGIcon, { Props as IconProps } from "../components/svg/SVGIcon.astro";

const frontEndLinks: {
  label: string;
  href?: string;
  icon: IconProps["icon"];
}[] = [
  {
    label: "react",
    icon: "react",
  },
  {
    label: "vue",
    icon: "vue",
  },
  {
    label: "tailwind",
    icon: "tailwind",
  },
];

const backEndLinks: {
  label: string;
  href?: string;
  icon: IconProps["icon"];
}[] = [
  {
    label: "nextjs",
    icon: "nextjs",
  },
  {
    label: "expressjs",
    icon: "expressjs",
  },
  {
    label: "nuxtjs",
    icon: "nuxtjs",
  },
];

const dbLinks: {
  label: string;
  href?: string;
  icon: IconProps["icon"];
}[] = [
  {
    label: "postgresql",
    icon: "postgres",
  },
  {
    label: "mysql",
    icon: "mysql",
  },
  {
    label: "mongodb",
    icon: "mongodb",
  },
];
---

<BaseLayout title="Khawaja Ammar" description="Khawaja Ammar's Portfolio">
  <main class="flex flex-col items-center justify-center gap-20">
    <section
      class="flex flex-col items-center justify-center gap-4 sm:flex-row"
    >
      <div class="basis-full sm:basis-2/3">
        <h1>Full Stack Engineer üëãüèª</h1>
        <p class="">
          Hi, I'm Ammar, a passionate programmer currently based in Pakistan. üìç
        </p>
      </div>
      <div class="aspect-square basis-full justify-center sm:basis-1/3">
        <img
          class="rounded-xl border border-bordercolor border-opacity-25"
          src="profile.jpg"
          alt="profilepicture"
        />
      </div>
    </section>

    <section
      class="flex w-full flex-col items-center rounded-2xl border-2 border-bordercolor border-opacity-25 bg-secondarycolor p-12 dark:bg-secondarycolor-dark"
    >
      <div class="flex w-full justify-between">
        <h2>Frameworks</h2>
        <a class="self-end text-accentcolor" href="/skills">See all...</a>
      </div>
      <div
        class="flex w-full flex-col gap-10 text-2xl md:text-3xl lg:text-5xl xl:text-6xl"
      >
        <div class="">
          <h3>Frontend</h3>
          <div class="flex justify-center gap-8">
            {
              frontEndLinks.map((link) => (
                <a href={`/tags/${link.label}`}>
                  <SVGIcon
                    icon={link.icon}
                    className={`${
                      link.label === "react" && "animate-react-logo-spin"
                    }`}
                  />
                </a>
              ))
            }
          </div>
        </div>

        <div>
          <h3>Backend</h3>
          <div class="flex justify-center gap-8">
            {
              backEndLinks.map((link) => (
                <a href={`/tags/${link.label}`}>
                  <SVGIcon icon={link.icon} />
                </a>
              ))
            }
          </div>
        </div>

        <div>
          <h3>Database</h3>
          <div class="flex justify-center gap-8">
            {
              dbLinks.map((link) => (
                <a href={`/tags/${link.label}`}>
                  <SVGIcon icon={link.icon} />
                </a>
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <section
      class="flex w-full flex-col items-center rounded-2xl border-2 border-bordercolor border-opacity-25 bg-secondarycolor p-12 dark:bg-secondarycolor-dark"
    >
      <div class="flex w-full justify-between">
        <h1>Projects</h1>
        <a class="self-end text-accentcolor" href="/work">See all...</a>
      </div>
      <div>
        <div class="basis-full">
          <h3>Full Stack Engineer</h3>
          <p>I am the Lord of all that is golden</p>
        </div>

        <div class="basis-full">
          <h3>Hello</h3>
          <p>
            Lorem, ipsum dolor sit amet consectetur adipisicing elit. Error quod
            cupiditate quam maiores sint aut.
          </p>
        </div>
        <div class="basis-full">
          <h3>Hello</h3>
          <p>
            Lorem ipsum dolor sit amet consectetur adipisicing elit. Nesciunt,
            reiciendis?
          </p>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
