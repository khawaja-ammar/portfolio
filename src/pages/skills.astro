---

<BaseLayout title="Skills">
  <main class="flex flex-col gap-12">
    <section class="sectionContainer">
      <div class="flex w-full justify-between">
        <h2>Languages</h2>
      </div>
      <div
        class="flex w-full flex-col gap-10 text-2xl md:text-3xl lg:text-5xl xl:text-6xl"
      >
        <div class="flex flex-col gap-4">
          <div class="flex justify-center gap-8">
            {
              langauge_DSLs.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
          <div class="flex justify-center gap-8">
            {
              langauge_programming.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <section class="sectionContainer">
      <div class="flex w-full justify-between">
        <h2>Frameworks</h2>
      </div>
      <div
        class="flex w-full flex-col gap-10 text-2xl md:text-3xl lg:text-5xl xl:text-6xl"
      >
        <div class="flex flex-col gap-4">
          <div class="flex justify-center gap-8">
            {
              frontEndLinks.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
          <div class="flex justify-center gap-8">
            {
              fullstackLinks.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
          <div class="flex justify-center gap-8">
            {
              backEndLinks.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <section class="sectionContainer">
      <div class="flex w-full justify-between">
        <h2>Databases</h2>
      </div>
      <div
        class="flex w-full flex-col gap-10 text-2xl md:text-3xl lg:text-5xl xl:text-6xl"
      >
        <div class="flex flex-col gap-4">
          <div class="flex justify-center gap-8">
            {
              dbLinks.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
        </div>
      </div>
    </section>

    <section class="sectionContainer">
      <div class="flex w-full justify-between">
        <h2>Libraries</h2>
      </div>
      <div
        class="flex w-full flex-col gap-10 text-2xl md:text-3xl lg:text-5xl xl:text-6xl"
      >
        <div class="flex flex-col gap-4">
          <div class="flex justify-center gap-8">
            {
              uiLibs.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
          <div class="flex justify-center gap-8">
            {
              libraryLinks.map((link) => (
                <LabeledIcon
                  link={link.link}
                  label={link.label}
                  icon={link.icon}
                />
              ))
            }
          </div>
        </div>
      </div>
    </section>
  </main>
</BaseLayout>
