  link: string;
  icon: IconProps["icon"];
  label: string;
}[] = [
  {
    link: "html",
    icon: "lang_html",
    label: "HTML",
  },

  {
    link: "css",
    icon: "lang_css",
    label: "CSS",
  },
  {
    link: "sql",
    icon: "lang_sql",
    label: "SQL",
  },
];

