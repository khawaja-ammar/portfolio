---
import SVGIcon from "../svg/SVGIcon.astro";

export interface Props {
  link: string;
  title: string;
  points: string[];
  skills: string[];
  image?: string;
}

const { link, title, points, skills, image = "" } = Astro.props;
---

<div class="basis-full">
  <a href={link} target="_blank" class="flex w-fit items-center gap-2">
    <h3>{title}</h3>
    <SVGIcon
      icon="externallink"
      className="text-xs lg:text-sm dark:fill-white"
    />
  </a>
  <div class="flex items-center gap-4 py-1 text-sm">
    {
      skills.map((skill) => (
        <p class="rounded-xl bg-accentcolor px-2 py-[2px] text-white dark:text-black">
          {skill}
        </p>
      ))
    }
  </div>
  <div
    class={image !== "" ? "flex flex-col items-center gap-4 lg:flex-row" : ""}
  >
    {
      image !== "" && (
        <div class="w-1/3 basis-1/6 lg:w-full">
          <img
            src={image}
            class="mt-4 rounded-lg border-2 border-bordercolor border-opacity-25 dark:border-bordercolor-dark sm:rounded-lg lg:mt-0"
          />
        </div>
      )
    }
    <ul class={image !== "" ? "basis-5/6 list-disc pl-6" : "list-disc pl-6"}>
      {points.map((point) => <li>{point}</li>)}
    </ul>
  </div>
</div>
